
{{> layout}}

<section class="login-container">
  <h1>Log In</h1>
  <form action="/login" method="POST" class="login-form">
    <label for="email">Log in with your volunteer credentials here</label>
      <input type="email" id="email" name="email" placeholder="Email" required>
      <input type="password" id="password" name="password" placeholder="Password" required>
    <a href="#" class="forgot-password">Forgotten your password?</a>
    <a href="/volunteer-interest" class="interested-volunteering">Interested in volunteering?</a>
    <button type="submit" class="btn btn-login" id="loginbtn">Login</button>
  </form>
</section>

