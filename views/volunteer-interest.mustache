<!-- views/volunteer-interest.mustache -->
<div class="volunteer-interest-container">
    <h1>Are you interested in volunteering?</h1>
    <p>Submit your interest below:</p>

    <form action="/submit-volunteer-interest" method="POST" class="volunteer-form">
        <div class="form-group">
            <label for="firstName">First Name:</label>
            <input type="text" id="firstName" name="firstName" required>
        </div>

        <div class="form-group">
            <label for="lastName">Last Name:</label>
            <input type="text" id="lastName" name="lastName" required>
        </div>

        <div class="form-group">
            <label for="age">Age:</label>
            <input type="number" id="age" name="age" required>
        </div>

        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required>
        </div>

        <div class="form-group">
            <label for="phone">Phone:</label>
            <input type="tel" id="phone" name="phone" required>
        </div>

        <div class="form-group">
            <label for="reason">Reason:</label>
            <textarea id="reason" name="reason" rows="4" required></textarea>
        </div>

        <button type="submit" class="btn-submit">Submit</button>
    </form>
</div>
